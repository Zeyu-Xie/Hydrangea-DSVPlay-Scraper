{
    "manifest_version": 3,
    "name": "DSVPlay Scraper",
    "version": "1.0.0",
    "description": "A handy chrome extension for downloading lecture recording videos from play.dsv.su.se.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://play.dsv.su.se/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}